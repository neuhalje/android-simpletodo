<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Solarized.Dark.AppTheme">
    </style>

    <style name="Theme.Solarized.Light.AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/base3</item>
        <item name="android:textColor">@color/base00</item>
        <item name="android:textColorHighlight">@color/base01</item>
        <item name="android:textColorHighlightInverse">@color/base2</item>
        <item name="android:textColorHint">@color/base1</item>
        <item name="android:textColorHintInverse">@color/base02</item>
        <item name="android:textColorPrimary">@color/base00</item>
        <item name="android:textColorPrimaryInverse">@color/base0</item>
        <item name="android:textColorLink">@color/blue</item>
        <item name="android:textColorLinkInverse">@color/base2</item>

        <item name="labelBorderColor">@color/base1</item>
        <item name="labelTextColor">@color/blue</item>
        <item name="labelBackgroundColor">@color/base2</item>

        <item name="croutonBackgroundColor">@color/base02</item>
        <item name="croutonPadding">@dimen/margin_small</item>
    </style>

    <style name="Theme.Solarized.Dark.AppTheme" parent="android:Theme.Holo">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/base03</item>
        <item name="android:textColor">@color/base0</item>
        <item name="android:textColorHighlight">@color/base02</item>
        <item name="android:textColorHighlightInverse">@color/base02</item>
        <item name="android:textColorHint">@color/base01</item>
        <item name="android:textColorHintInverse">@color/base2</item>
        <item name="android:textColorPrimary">@color/base0</item>
        <item name="android:textColorPrimaryInverse">@color/base00</item>
        <item name="android:textColorLink">@color/blue</item>
        <item name="android:textColorLinkInverse">@color/base02</item>

        <item name="labelBorderColor">@color/base01</item>
        <item name="labelTextColor">@color/blue</item>
        <item name="labelBackgroundColor">@color/base02</item>

        <item name="croutonBackgroundColor">@color/base2</item>
        <item name="croutonPadding">@dimen/margin_small</item>
    </style>

    <style name="labelButtonView" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginRight">@dimen/margin_small</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:clickable">true</item>

        <item name="android:minHeight">32dip</item>
        <item name="android:minWidth">64dip</item>
    </style>



</resources>
